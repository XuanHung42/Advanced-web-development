@model Post

@{
	var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
			? "/images/image5.jpg"
			: $"/{Model.ImageUrl}";
	
}

<article class="blog-entry mb-4">
	<div class="card">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="@imageUrl"
					 class="card-img"
					 alt="@Model.Title">
			</div>

		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title">
				
				<p class="card-text">
					<small class="text-muted">
						Tác giả
					</small>

					<span class="text-primary">
						<a asp-controller="Blog"
						   asp-action="Author"
						   asp-route-slug="@Model.Author.UrlSlug"
						   class="text-decoration-none">@Model.Author.FullName</a>

					</span>
					<small class="text-muted">
						Chủ đề
					</small>

					<span class="text-primary">
						<a asp-controller="Blog"
						   asp-action="Category"
						   asp-route-slug="@Model.Category.UrlSlug"
						   class="text-decoration-none">@Model.Category.Name</a>
					</span>
						<small class="text-muted">
							Số ngươi
						</small>
						<span class="text-primary">
							<a asp-controller="Blog"
							   
							   class="text-decoration-none">@Model.ViewCount</a>
						</span>


				</p>

					<small class="text-muted">
						Nội dung
					</small
					<p>
						@Model.Description
					</p>
						<small class="text-muted">
							Ngày đăng:
						</small>
						@Model.PostedDate.ToString()
					
					
					
				
			
				</div>
			</div>
		</div>
	
</article>