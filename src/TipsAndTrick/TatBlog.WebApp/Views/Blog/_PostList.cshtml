@model Post

@{
	var imageUrl = string.IsNullOrWhiteSpace(Model.UrlSlug)
			? "/images/image_4.jpg"
			: $"/{Model.ImageUrl}";
}

<article class="blog-entry mb-4">
	<div class="card">
		<div class="row g-0">
			<img src="@imageUrl"
				class="card-img"
				alt="@Model.Title">

		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title">
					@Model.Title
				</h5>
				<p class="card-text">
					<small class="text-muted">
						Tác giả
					</small>

					<span class="text-primary">
						@Model.AuthorId
					</span>
					<small class="text-muted">
						Chủ đề
					</small>

					<span class="text-primary">
						@Model.Category.Name
					</span>


				</p>
				<p class="card-text">
					@Html.Raw(Model.ShortDescription)
				</p>
				<div class="tag-list">
					<partial name="_TagList" model="@Model.Tags" />
				</div>
				<div class="text-end">
					<a asp-controller="Blog"
					asp-action="Post"
					asp-route-year = "@Model.PostedDate.Year"
					asp-route-month="@Model.PostedDate.Month"
					asp-route-day="@Model.PostedDate.Date"
					asp-route-slug="@Model.UrlSlug"
					class="btn btn-primary"
					title="@Model.Title">
				Xem chi tiết</a>
				</div>
			</div>
		</div>
	</div>
</article>