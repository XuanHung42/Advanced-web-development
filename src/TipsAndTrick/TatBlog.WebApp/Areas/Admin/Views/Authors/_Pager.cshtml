@if (Model.PageCount > 1)
{
	<div class="text-center my-4" `>
		@if (Model.HasPreviousPage)
		{
			<a asp-controller="Authors"
	   asp-area="Admin"
	   asp-action="@actionName"
	   asp-route-slug="@slug"
	   asp-route-k="@authorQuery.Keyword"
	   asp-route-p="@(Model.PageNumber -1)"
	   asp-route-ps="@Model.PageSize"
	   class="btn btn-info">

				<i class="fa fa-arrow-left"></i>
				Trang trước
			</a>
		}
		else
		{
			<button type="button"
			class="btn btn-outline-secondary"
			disable>
				<i class="fa fa-arrow-left"></i>
				Trang trước
			</button>
		}
		@if (Model.HasNextPage)
		{
			<a asp-controller="Authors"
	   asp-action="@actionName"
	   asp-area="Admin"
	   asp-route-slug="@slug"
	   asp-route-k="@authorQuery.Keyword"
	   asp-route-p="@(Model.PageNumber +1)"
	   asp-route-ps="@Model.PageSize"
	   class="btn btn-info">

				Trang sau
				<i class="fa fa-arrow-right"></i>

			</a>
		}
		else
		{
			<button type="button"
			class="btn btn-outline-secondary"
			disable>

				Trang sau
				<i class="fa fa-arrow-right"></i>
			</button>
		}


	</div>
