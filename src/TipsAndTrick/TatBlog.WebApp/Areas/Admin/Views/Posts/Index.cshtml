@using TatBlog.WebApp.Areas.Admin.Models;
@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel 
 
@{
    ViewData["PageTitle"] = "Danh sách bài viết";
    var postsList = ViewBag.PostsList as IPagedList<Post>;
    var postsEdit = ViewBag.PostsEdit as PostEditModel;

}
<h1>
Danh sách bài viết
</h1>
<partial name="_PostFilterPane" model="Model"/>
@if (postsList != null && postsList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Tác giả</th>
                <th>Chủ đề</th>
                <th>Xuất bản</th>
                <th> Xóa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in postsList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                   asp-controller="Posts"
                   asp-action="Edit"
                   asp-route-id="@post.Id"
                   class="text-bold">
                            @post.Title
                        </a>
                        <p class="text-muted">
                            @post.ShortDescription
                        </p>
                    </td>
                    <td>
                        @post.Author.FullName
                    </td>
                    <td>
                        @post.Category.Name
                    </td>
                    <td>
                        <a class="btn"
                   asp-area="Admin"
                   asp-controller="Posts"
                   asp-action="ChangePublishPost"
                   asp-route-id="@post.Id">
                            @if (post.Published)
                            {
                                @*<i class="fa fa-unlock"></i>*@
                                <i class="fa fa-check" style="color:green"></i>
                                <span style="color: green">Công khai</span>
                            }
                            else
                            {
                                <i class="fa fa-times" style="color:black"></i>
                                <span style="color:black">Riêng tư</span>
                            }
                        </a>
                       @* <partial name="CheckPublish" model="@postsEdit">*@
                        @*<div class="form-check">
                            <input class="form-check-input"
                           type="checkbox"
                           asp-for="@post.Published" />
                            <label class="form-check-label"
                           asp-for="@post.Published"></label>
                        </div>*@
                        @*@*(post.Published ? "Có" : "Không")*@
                    </td>
                    <td>
                        <a class="btn"
                   asp-area="Admin"
                   asp-controller="Posts"
                   asp-action="DeletePost"
                   asp-route-id="@post.Id">
                            <i class="fa fa-trash" style="color:red"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="text-danger">
        Không tìm thấy bài viết nào
    </h1>
}
<partial name="_Pager" model="@postsList" />